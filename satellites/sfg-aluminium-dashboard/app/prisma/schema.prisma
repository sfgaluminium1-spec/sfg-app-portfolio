
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/sfg-aluminium-dashboard/app/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  emailVerified DateTime?
  image         String?
  role          String    @default("user")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model FinancialMetric {
  id          String   @id @default(cuid())
  date        DateTime
  revenue     Float
  expenses    Float
  profit      Float
  efficiency  Float
  createdAt   DateTime @default(now())
}

model AIModelUsage {
  id        String   @id @default(cuid())
  modelName String
  requests  Int
  success   Int
  errors    Int
  date      DateTime
  createdAt DateTime @default(now())
}

model DocumentProcessing {
  id            String   @id @default(cuid())
  documentName  String
  status        String
  processingTime Float
  fileSize      Int
  createdAt     DateTime @default(now())
}

model SystemLog {
  id        String   @id @default(cuid())
  level     String
  message   String
  details   String?
  createdAt DateTime @default(now())
}

model Configuration {
  id    String @id @default(cuid())
  key   String @unique
  value String
}
