  "database_schema": {
    "orm": "Prisma",
    "migrations": "managed",
    "tables": [
      {
        "name": "User",
        "purpose": "User accounts",
        "key_fields": [
          "id",
          "email",
          "password",
          "createdAt"
        ]
      },
      {
        "name": "CorrectionHistory",
        "purpose": "Store correction history",
        "key_fields": [
          "id",
          "userId",
          "originalText",
          "correctedText",
          "mode",
          "timestamp"
        ]
      },
      {
        "name": "UserPreferences",
        "purpose": "User settings",
        "key_fields": [
          "id",
          "userId",
          "preferences"
        ]
      },
      {
        "name": "Templates",
        "purpose": "Business templates",
        "key_fields": [
          "id",
          "name",
          "category",
          "content"
        ]
      }
    ]
  },
  
