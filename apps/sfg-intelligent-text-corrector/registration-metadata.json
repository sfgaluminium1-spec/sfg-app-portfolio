  },
  
  "technical_details": {
    "framework": "Next.js 14.2.28",
    "language": "TypeScript 5.2.2",
    "runtime": "Node.js",
    "database": "PostgreSQL",
    "orm": "Prisma 6.7.0",
    "authentication": "NextAuth.js 4.24.11",
    "llm_provider": "Abacus.AI",
    "chrome_manifest_version": 3
  },
  
  "api_endpoints": [
    {
      "path": "/api/correct",
      "method": "POST",
      "description": "Correct text with specified mode",
      "authentication": "optional",
      "rate_limit": "future",
      "params": {
        "text": "string (required)",
        "mode": "string (required)",
        "userId": "string (optional)"
      },
      "response": {
        "corrected_text": "string",
        "changes": "array",
        "confidence": "number"
      }
    },
    {
      "path": "/api/prompt-enhance",
      "method": "POST",
      "description": "Enhance AI prompts for better results",
      "authentication": "optional",
      "params": {
        "prompt": "string (required)",
        "userId": "string (optional)"
      },
      "response": {
        "enhanced_prompt": "string",
        "improvements": "array",
        "tips": "array"
      }
    },
    {
      "path": "/api/signup",
      "method": "POST",
      "description": "User registration",
      "authentication": "none",
      "params": {
        "email": "string (required)",
        "password": "string (required)"
      },
      "response": {
        "success": "boolean",
        "message": "string"
      }
    },
    {
      "path": "/api/auth/[...nextauth]",
      "method": "POST/GET",
      "description": "NextAuth.js authentication endpoints",
      "authentication": "varies",
      "providers": ["Credentials"]
    },
    {
      "path": "/api/password-reset",
      "method": "POST",
      "description": "Password reset (request and reset)",
      "authentication": "none",
      "params": {
        "action": "string (required)",
        "email": "string (for request)",
        "token": "string (for reset)",
        "password": "string (for reset)"
      },
      "response": {
        "success": "boolean",
        "message": "string",
        "token": "string (for request)"
      }
    },
    {
      "path": "/api/history",
      "method": "GET",
      "description": "Get user correction history",
      "authentication": "required",
      "params": {
        "userId": "string (required)"
      },
      "response": {
        "corrections": "array"
      }
    },
    {
      "path": "/api/templates",
      "method": "GET",
      "description": "Get available business templates",
      "authentication": "optional",
      "response": {
        "templates": "array"
      }
    }
  ],
  
  "webhook_configuration": {
    "webhook_url": null,
    "webhook_secret": null,
    "webhook_events": [],
    "status": "not_configured",
    "future_events": [
