        "JWT with expiration",
        "Secure session management"
      ]
    },
    {
      "name": "Password Reset Flow",
      "description": "Allow users to reset forgotten passwords",
      "steps": [
        {
          "step": 1,
          "action": "User clicks 'Forgot Password'",
          "actor": "user"
        },
        {
          "step": 2,
          "action": "User enters email address",
          "actor": "user"
        },
        {
          "step": 3,
          "action": "API generates time-limited reset token",
          "actor": "api",
          "expiration": "1 hour"
        },
        {
          "step": 4,
          "action": "Reset token stored (in-memory for demo)",
          "actor": "api"
        },
        {
          "step": 5,
          "action": "User receives reset instructions",
          "actor": "system",
          "note": "Email not implemented in demo"
        },
        {
          "step": 6,
          "action": "User enters token and new password",
          "actor": "user"
        },
        {
          "step": 7,
          "action": "API validates token and updates password",
          "actor": "api"
        },
        {
          "step": 8,
          "action": "User can log in with new password",
          "actor": "user"
        }
      ],
      "security": "Time-limited tokens, single-use"
    }
  ],
  
  "business_rules": [
    {
      "rule": "Text Processing Quality",
      "condition": "confidence >= 0.85",
      "action": "Accept and apply correction",
      "else": "Flag for manual review"
    },
    {
      "rule": "Maximum Processing Time",
      "condition": "processing_time <= 5000ms",
      "action": "Return result",
      "else": "Timeout and notify user"
    },
    {
      "rule": "Preserve Original Intent",
      "condition": "all corrections",
      "action": "Maintain meaning and context",
      "priority": "highest"
    },
    {
      "rule": "Secure Authentication",
      "condition": "all user actions",
      "action": "Require valid JWT token",
      "exceptions": ["signup", "login", "public pages"]
    },
    {
      "rule": "Password Security",
      "condition": "password creation/reset",
      "action": "Minimum 8 characters, bcrypt hash",
      "strength": "Medium+"
    },
    {
      "rule": "History Retention",
      "condition": "user opted in",
      "action": "Store correction history",
      "retention": "90 days",
      "privacy": "User can delete anytime"
    }
  ],
  
