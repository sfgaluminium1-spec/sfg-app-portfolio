  "workflows": [
    {
      "name": "Right-Click Text Correction",
      "description": "Correct selected text via Chrome context menu",
      "steps": [
        {
          "step": 1,
          "action": "User selects text on any webpage",
          "actor": "user"
        },
        {
          "step": 2,
          "action": "User right-clicks to open context menu",
          "actor": "user"
        },
        {
          "step": 3,
          "action": "User selects correction type from 'SFG AI Tools' menu",
          "actor": "user",
          "options": [
            "Grammar Check",
            "Punctuation Check",
            "Simple Rewrite",
            "Business Style Rewrite",
            "Technical Rewrite",
            "AI Prompt Enhance"
          ]
        },
        {
          "step": 4,
          "action": "Extension captures selected text and mode",
          "actor": "extension"
        },
        {
          "step": 5,
          "action": "Extension sends POST request to /api/correct",
          "actor": "extension",
          "payload": {
            "text": "selected_text",
            "mode": "correction_mode",
            "userId": "user_id_if_logged_in"
          }
        },
        {
          "step": 6,
          "action": "API processes text via Abacus.AI LLM",
          "actor": "api",
          "processing": "LLM-based correction/enhancement"
        },
        {
          "step": 7,
          "action": "API returns corrected text",
          "actor": "api",
          "response": {
            "corrected_text": "improved_text",
            "changes": [],
            "confidence": 0.95
          }
        },
        {
          "step": 8,
          "action": "Extension replaces original text with corrected text",
          "actor": "extension"
        },
        {
          "step": 9,
          "action": "Correction saved to user history (if logged in)",
          "actor": "api",
          "optional": true
        }
      ],
      "duration": "2-5 seconds",
      "success_rate": "98%"
    },
    {
      "name": "AI Prompt Enhancement Workflow",
      "description": "Transform basic prompts into effective AI instructions",
      "steps": [
        {
          "step": 1,
          "action": "User writes basic prompt",
          "actor": "user"
        },
        {
          "step": 2,
          "action": "User selects prompt text and right-clicks",
          "actor": "user"
        },
        {
          "step": 3,
          "action": "User chooses 'AI Prompt Enhance'",
          "actor": "user"
        },
        {
          "step": 4,
          "action": "Extension sends prompt to /api/prompt-enhance",
          "actor": "extension",
          "payload": {
            "prompt": "basic_prompt",
            "userId": "user_id"
          }
        },
        {
          "step": 5,
          "action": "API analyzes and enhances prompt",
          "actor": "api",
          "enhancements": [
            "Adds context and background",
            "Structures into clear sections",
            "Includes specific requirements",
            "Adds constraints and guidelines",
            "Optimizes for AI understanding"
          ]
        },
        {
          "step": 6,
          "action": "API returns enhanced prompt",
          "actor": "api",
          "response": {
            "enhanced_prompt": "detailed_effective_prompt",
            "improvements": [],
            "tips": []
          }
        },
        {
          "step": 7,
          "action": "Extension replaces original prompt",
          "actor": "extension"
        },
        {
          "step": 8,
          "action": "User gets better AI responses",
          "actor": "user",
          "benefit": "Higher quality AI output"
        }
      ],
      "duration": "2-4 seconds",
      "improvement_rate": "300-500%"
    },
    {
      "name": "Business Template Application",
      "description": "Apply pre-built business templates to documents",
      "steps": [
        {
          "step": 1,
          "action": "User clicks in editable field",
          "actor": "user"
        },
        {
          "step": 2,
          "action": "User right-clicks for context menu",
          "actor": "user"
        },
        {
          "step": 3,
          "action": "User selects 'Business Templates'",
          "actor": "user"
        },
        {
          "step": 4,
          "action": "User chooses template type",
          "actor": "user",
          "options": [
            "Professional email",
            "Business proposal",
            "Meeting agenda",
            "Status report"
          ]
        },
        {
          "step": 5,
          "action": "Extension fetches template from /api/templates",
          "actor": "extension"
        },
        {
          "step": 6,
          "action": "Template inserted with placeholders",
          "actor": "extension"
        },
        {
          "step": 7,
          "action": "User customizes content",
          "actor": "user"
        },
        {
          "step": 8,
          "action": "Template saved for future reuse",
          "actor": "api",
          "optional": true
        }
      ],
      "duration": "10-30 seconds",
      "time_saved": "5-15 minutes per document"
    },
    {
      "name": "User Registration and Authentication",
      "description": "Secure user signup and login flow",
      "steps": [
        {
          "step": 1,
