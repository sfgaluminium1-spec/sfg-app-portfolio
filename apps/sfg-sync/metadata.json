    "health_check": {
      "url": "https://sfg-sync.abacusai.app/api/health",
      "method": "GET",
      "expected_response": 200,
      "interval": 300
    }
  },
  
  "webhook_configuration": {
    "events": [
      "enquiry.created",
      "quote.requested",
      "order.approved",
      "customer.registered",
      "credit.check_required",
      "invoice.due",
      "payment.received",
      "fabrication.scheduled",
      "installation.scheduled",
      "conflict.detected"
