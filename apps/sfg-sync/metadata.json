      "actions": [
        "action.create_quote",
        "action.approve_order",
        "action.schedule_fabrication",
        "action.schedule_installation",
        "action.resolve_conflict"
      ]
    },
    "request_format": {
      "type": "string",
      "params": "object",
      "request_id": "string"
    },
    "response_format": {
      "request_id": "string",
      "status": "success|error",
      "result": "object",
      "timestamp": "ISO8601",
      "processed_by": "string"
    }
  },
  
