    "delivery_format": {
      "type": "string",
      "data": "object",
      "event_id": "string",
      "timestamp": "ISO8601"
    }
  },
  
  "message_handler_configuration": {
    "supported_messages": {
      "queries": [
        "query.customer_data",
        "query.quote_status",
        "query.order_status",
        "query.fabrication_status",
        "query.installation_status",
        "query.resource_availability"
