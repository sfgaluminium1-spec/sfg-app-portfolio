generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/sfg_aluminium_ltd/app/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  @@map(name: "users")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

// Lead generation and contact forms
model ContactSubmission {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  company     String?
  subject     String
  message     String
  status      String   @default("new") // new, contacted, qualified, converted, closed
  formType    String   @default("contact") // contact, quote, service
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("contact_submissions")
}

model QuoteRequest {
  id              String   @id @default(cuid())
  name            String
  email           String
  phone           String?
  company         String?
  projectType     String   // windows, doors, railings, curtain-walls, roofing, custom
  projectDetails  String
  budget          String?
  timeline        String?
  address         String?
  status          String   @default("new") // new, quoted, accepted, in-progress, completed
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("quote_requests")
}

model ServiceInquiry {
  id            String   @id @default(cuid())
  name          String
  email         String
  phone         String?
  serviceType   String   // installation, maintenance, repair, consultation
  productType   String?  // windows, doors, railings, etc.
  description   String
  urgency       String   @default("normal") // urgent, normal, low
  preferredDate String?
  address       String?
  status        String   @default("new") // new, scheduled, in-progress, completed
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("service_inquiries")
}
